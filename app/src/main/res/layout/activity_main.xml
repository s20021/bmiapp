<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/age_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="歳"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/age_input"
        app:layout_constraintStart_toEndOf="@+id/age_input"
        app:layout_constraintTop_toTopOf="@+id/age_input" />

    <EditText
        android:id="@+id/age_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="年齢"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="年齢"
        app:layout_constraintBottom_toBottomOf="@+id/age_input"
        app:layout_constraintEnd_toStartOf="@+id/age_input"
        app:layout_constraintTop_toTopOf="@+id/age_input" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="必要な情報を入力してください"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/height_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="身長"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_input" />

    <TextView
        android:id="@+id/height_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="㎝"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/height_input"
        app:layout_constraintStart_toEndOf="@+id/height_input"
        app:layout_constraintTop_toTopOf="@+id/height_input" />

    <EditText
        android:id="@+id/weight_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="体重"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_input" />

    <TextView
        android:id="@+id/weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="㎏"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/weight_input"
        app:layout_constraintStart_toEndOf="@+id/weight_input"
        app:layout_constraintTop_toTopOf="@+id/weight_input" />

    <TextView
        android:id="@+id/height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="身長"
        app:layout_constraintBottom_toBottomOf="@+id/height_input"
        app:layout_constraintEnd_toStartOf="@+id/height_input"
        app:layout_constraintTop_toTopOf="@+id/height_input" />

    <TextView
        android:id="@+id/weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="体重"
        app:layout_constraintBottom_toBottomOf="@+id/weight_input"
        app:layout_constraintEnd_toStartOf="@+id/weight_input"
        app:layout_constraintTop_toBottomOf="@+id/height_input" />

    <Button
        android:id="@+id/calc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="計算"
        app:layout_constraintEnd_toEndOf="@+id/weight_input"
        app:layout_constraintStart_toStartOf="@+id/weight_input"
        app:layout_constraintTop_toBottomOf="@+id/weight_input" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="クリア"
        android:backgroundTint="#7f7f7f7f"
        app:layout_constraintEnd_toEndOf="@+id/calc_button"
        app:layout_constraintStart_toStartOf="@+id/calc_button"
        app:layout_constraintTop_toBottomOf="@+id/calc_button" />

</androidx.constraintlayout.widget.ConstraintLayout>